<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hinodesoftworks.kanagt.QuizSetupFragment"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/quiz_setup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Quiz Length"/>

    <Spinner
        android:id="@+id/quiz_setup_num_of_question_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Character Sets for Quiz (Currently Disabled)"/>

    <CheckBox
        android:id="@+id/quiz_setup_all_set_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Sets (あ-ぴょ)"
        android:enabled="false"/>

    <CheckBox
        android:id="@+id/quiz_setup_basic_set_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Set (あ-ろ)"
        android:enabled="false"/>

    <CheckBox
        android:id="@+id/quiz_setup_extended_set_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extended Set (や, ゆ, よ, わ, を, ん)"
        android:enabled="false"/>

    <CheckBox
        android:id="@+id/quiz_setup_yoon_set_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yoon Set (きゃ-りょ)"
        android:enabled="false"/>

    <CheckBox
        android:id="@+id/quiz_setup_dakuten_set_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Han)Dakuten Set (が-ぽ)"
        android:enabled="false"/>

    <CheckBox
        android:id="@+id/quiz_setup_dakuten_yoon_set_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(Han)Dakuten Yoon Set (ぎゃ-ぴょ)"
        android:enabled="false"/>


    <Button
        android:id="@+id/quiz_setup_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/button_start_quiz"
        android:textColor="#FFF"
        android:background="@drawable/nav_button_selector"/>

</LinearLayout>
